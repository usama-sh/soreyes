{
    "manifest_version": 3,
    "name": "Highlighter",
    "version": "1.0",
    "description": "Highlights text paraghraphs when hovered",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "js": ["content.js"],
        "matches":["<all_urls>"]
      }
    ]
  }
  