{
    "manifest_version": 3,
    "name": "Highlighter",
    "version": "1.0",
    "description": "Highlights text paraghraphs when hovered",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "js": ["content.js"],
        "matches":["<all_urls>"]
      }
    ]
  }
  